{
  // Compiler options
  "compilerOptions": {
    // Language and environment
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",

    // Type checking
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Module compatibility
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Build behavior
    "isolatedModules": true,
    "noEmit": true
  },

  // Project structure
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
